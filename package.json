{
  "name": "WaveTool",
  "version": "1.6.0",
  "description": "A simple Electron application",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "electron": "electron .",
    "test": "jest",
    "start": "electron main.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist-win": "electron-builder --win --x64"
  },
  "build": {
    "appId": "com.namle.wave_tool",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "portable",
      "icon": "build/icon.ico"
    }
  },
  "author": "Nam Le",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.3.1",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "@mysten/sui.js": "^0.54.1",
    "bootstrap": "4.3.1",
    "font-awesome": "4.7.0",
    "jquery": "3.4.1",
    "lodash-es": "^4.17.21",
    "node-fetch": "^3.3.2"
  }
}
